GROQ_API_KEY=

HUGGINGFACE_API_KEY=



# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# Embedding model to use (free models available)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# Use local embeddings (true) or HuggingFace API (false)
# Local is free but slower, API is faster but requires key
USE_LOCAL_EMBEDDINGS=true

# =============================================================================
# GROQ MODEL CONFIGURATION
# =============================================================================
# Free models available: llama-3.3-70b-versatile, mixtral-8x7b-32768
GROQ_MODEL=llama-3.3-70b-versatile

# =============================================================================
# CHROMA DATABASE CONFIGURATION
# =============================================================================
# ChromaDB connection (local by default)
CHROMA_URL=./chroma

# =============================================================================
# INDEXING CONFIGURATION
# =============================================================================
# Chunk size for code splitting (characters)
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# Maximum file size to process (MB)
MAX_FILE_SIZE_MB=0.5

# Maximum concurrent requests for API calls
MAX_CONCURRENT_REQUESTS=3

# =============================================================================
# API RETRY CONFIGURATION
# =============================================================================
# HuggingFace API retry settings
HUGGINGFACE_MAX_RETRIES=2
HUGGINGFACE_RETRY_DELAY=3000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode for verbose logging
DEBUG=false
